# ===========================================
# Required — app will not start without these
# ===========================================

# Database (PostgreSQL connection string)
DATABASE_URL=postgresql://attndly:attndly_dev@localhost:5432/attndly_dev

# BetterAuth (must be at least 16 characters)
BETTER_AUTH_SECRET=generate-a-random-secret-here
BETTER_AUTH_URL=http://localhost:3000

# Next.js public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Optional — features degrade gracefully
# ===========================================

# Google OAuth (required for social sign-in)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Face Recognition Service
FACE_SERVICE_URL=http://localhost:8000

# Redis (Upstash) — used for rate limiting; falls back to in-memory
REDIS_URL=

# Email (Resend) — falls back to console.log in dev
RESEND_API_KEY=
EMAIL_FROM=noreply@attndly.com

# Sentry — error tracking (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
